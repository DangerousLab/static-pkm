{
  "version": "1.0",
  "description": "User-editable CDN scanning configuration",
  
  "scanDirectories": {
    "javascript": {
      "extensions": [".js"],
      "enabled": true
    },
    "Home": {
      "extensions": [".html", ".md", ".js"],
      "enabled": true,
      "overrides": {
        ".md": {
          "cacheAllImages": true
        }
      }
    },
    "css": {
      "extensions": [".css"],
      "enabled": true
    },
    "vendor": {
      "extensions": [".js", ".map"],
      "enabled": true
    },
    "assets": {
      "extensions": [".png", ".jpg", ".jpeg", ".svg", ".ico", ".webp"],
      "enabled": true
    }
  },
  
  "cdnDetection": {
    "domains": [
      "cdn.",
      "cdnjs.",
      "jsdelivr.",
      "unpkg.",
      "fonts.googleapis.com",
      "fonts.gstatic.com"
    ]
  },
  
  "mathJax": {
    "autoExpand": true,
    "fonts": [
      "MathJax_Main-Regular.woff",
      "MathJax_Math-Italic.woff",
      "MathJax_Size2-Regular.woff",
      "MathJax_Size1-Regular.woff",
      "MathJax_AMS-Regular.woff"
    ]
  },
  
  "excludePatterns": [
    "node_modules",
    ".git",
    ".DS_Store",
    "app.min.js",
    "app.min.css",
    "tree.json",
    "cache-manifest.json"
  ]
}
