{
  "name": "unstablon-pkm",
  "version": "2.0.0",
  "description": "Unstablon - Science-focused Native Personal Knowledge Management System",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "bash setup-dev.sh",
    "setup:scripts": "bash setup-dev.sh --scripts-only",
    "dev": "vite",
    "prebuild": "node scripts/generate-css-entry.mjs && node scripts/generate-tree.mjs",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "build:pwa": "npm run build:pwa:vite && npm run build:pwa:assets && npm run build:pwa:cache",
    "build:pwa:vite": "tsc && vite build --config vite.config.pwa.ts",
    "build:pwa:assets": "node scripts/copy-pwa-assets.mjs",
    "build:pwa:cache": "node scripts/generate-cache-manifest.mjs --pwa",
    "preview:pwa": "vite preview --outDir dist-pwa",
    "build:web": "npm run build:tree && npm run generate:css-entry && npm run build:css:legacy && npm run build:js:legacy && npm run cache:generate",
    "build:js:legacy": "echo 'Legacy Rollup build removed - use build:pwa instead' && exit 1",
    "build:css:legacy": "echo 'Legacy CSS build removed - Vite handles CSS' && exit 1",
    "build:tree": "node scripts/generate-tree.mjs",
    "generate:css-entry": "node scripts/generate-css-entry.mjs",
    "cache:generate": "node scripts/generate-cache-manifest.mjs",
    "clean": "rm -rf dist dist-pwa && rm -f css/main.css javascript/cache-manifest.json javascript/tree.json",
    "clean:legacy": "rm -f javascript/app.min.js* css/app.min.css*",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.300.0",
    "lz-string": "^1.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ses": "^1.14.0",
    "tailwind-merge": "^3.4.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@tauri-apps/cli": "^2.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "cssnano": "^6.0.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.33",
    "postcss-import": "^16.0.0",
    "prettier": "^3.2.0",
    "rollup": "^4.9.6",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
