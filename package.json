{
  "name": "unstablon-pkm",
  "version": "2.0.0",
  "description": "Unstablon - Science-focused Native Personal Knowledge Management System",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "bash setup-dev.sh",
    "setup:scripts": "bash setup-dev.sh --scripts-only",
    "dev": "vite",
    "prebuild": "node scripts/generate-css-entry.mjs && node scripts/generate-tree.mjs",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:debug": "tauri build --debug",
    "build:pwa": "npm run build:pwa:vite && npm run build:pwa:assets && npm run build:pwa:cache",
    "build:pwa:vite": "tsc && vite build --config vite.config.pwa.ts",
    "build:pwa:assets": "node scripts/copy-pwa-assets.mjs",
    "build:pwa:cache": "node scripts/generate-cache-manifest.mjs --pwa",
    "preview:pwa": "vite preview --outDir dist-pwa",
    "build:tree": "node scripts/generate-tree.mjs",
    "generate:css-entry": "node scripts/generate-css-entry.mjs",
    "clean": "rm -rf dist dist-pwa && rm -f src/css/main.css public/data/tree.json",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.1",
    "lucide-react": "^0.575.0",
    "lz-string": "^1.5.0",
    "markdown-it": "^14.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ses": "^1.14.0",
    "tailwind-merge": "^3.5.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@tauri-apps/cli": "^2.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^16.0.0",
    "postcss": "^8.4.33",
    "postcss-import": "^16.0.0",
    "prettier": "^3.2.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.8.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
