{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Unstablon",
  "version": "2.0.0",
  "identifier": "com.unstablon.pkm",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Unstablon",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.cdnfonts.com; font-src 'self' https://fonts.cdnfonts.com; img-src 'self' data: blob:; connect-src 'self' ipc: tauri:"
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "category": "Productivity",
    "shortDescription": "Science-focused Personal Knowledge Management",
    "longDescription": "Unstablon is a native desktop PKM application built for researchers and scientists who need computational power, data portability, and offline-first workflows."
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
