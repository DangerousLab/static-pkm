{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Unstablon",
  "version": "0.1.0",
  "identifier": "com.unstablon.pkm",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Unstablon",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main app capabilities",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "shell:allow-open",
            "dialog:allow-open",
            "dialog:allow-save"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "category": "Productivity",
    "shortDescription": "Science-focused Personal Knowledge Management",
    "longDescription": "Unstablon is a native desktop PKM application built for researchers and scientists who need computational power, data portability, and offline-first workflows."
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}